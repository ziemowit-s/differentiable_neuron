 load_file("nrngui.hoc")
create spine
access spine
{
	nseg = 10
	L = 0.5
	diam = 0.5
	insert cadifusrect
}
proc init() {
	finitialize(v_init)
	ca_cadifusrect[0](.001) = 1e-2
    L_cadifusrect = L
	cvode.re_init()
}
xopen("cadif.ses")
tstop = .02

objref ss
ss = new SaveState()

xpanel("test")
xbutton("save and init", "ss.save() stdinit()")
xbutton("restore", "ss.restore for i=0,2 Graph[i].flush()")
xpanel()